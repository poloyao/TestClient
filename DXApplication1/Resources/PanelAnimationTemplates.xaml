                                            </Grid.Background>
                                        </Grid>
                                        <Border x:Name="back_panel_up" Background="#59172239" CornerRadius="3" Opacity="0">
                                            <Border Background="#FFCFE3B0" Margin="1" CornerRadius="2,2,2,2">
