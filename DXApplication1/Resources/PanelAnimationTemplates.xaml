                                                <ScaleTransform ScaleY="-1" />
                                            </TextBlock.RenderTransform>
                                            <TextBlock.Foreground>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FFCFF0F4" Offset="0" />
                                                    <GradientStop Color="#FF8CE5E3" Offset="1" />
                                                    <GradientStop Color="#FF6CBCBF" Offset="0.5" />
                                                    <GradientStop Color="#FF3CA3A4" Offset="0.5" />
                                                </LinearGradientBrush>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </Grid>
                                    <Grid x:Name="text" VerticalAlignment="Bottom" Margin="0,-20,0,0">
                                        <TextBlock Text="{Binding Path=IndexName, RelativeSource={RelativeSource TemplatedParent}}" FontSize="58" FontWeight="Bold" Margin="0,1,0,0" Foreground="Black" Opacity="0.35" />
