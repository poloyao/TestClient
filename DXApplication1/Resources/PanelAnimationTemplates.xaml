                                        </Path>
                                    </Grid>
                                    <Grid x:Name="arrow_up_2" HorizontalAlignment="Center" Height="39" VerticalAlignment="Center" Width="67" Margin="8,1,-8,1" Opacity="0">
                                        <Grid Margin="-3,-3,-3,-4" Opacity="0.35">
                                            <Grid.Background>
                                                <ImageBrush Stretch="Fill" ImageSource="/DockingDemo;component/Images/TileImages/arrow-shadow.png" />
                                            </Grid.Background>
                                        </Grid>
                                        <Path Stretch="Fill" Fill="#59172239" Data="F1 M 533,406L 566,383L 600,406L 587,406L 587,422L 546,422L 546,406L 533,406 Z " HorizontalAlignment="Center" Height="39" UseLayoutRounding="False" VerticalAlignment="Center" Width="67" />
                                        <Path Stretch="Fill" Data="F1 M 536,405L 566,384L 597,405L 586,405L 586,421L 547,421L 547,405L 536,405 Z " HorizontalAlignment="Center" Height="37" UseLayoutRounding="False" VerticalAlignment="Center" Width="61" Fill="#FFCFE3B0" />
                                        <Path Stretch="Fill" Data="F1 M 537,405L 566,385L 596,405L 586,405L 586,421L 547,421L 547,405L 537,405 Z " HorizontalAlignment="Center" Height="36" Margin="0,1,0,0" UseLayoutRounding="False" VerticalAlignment="Center" Width="59">
                                            <Path.Fill>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FF9DC560" Offset="0" />
                                                    <GradientStop Color="#FF74A03A" Offset="1" />
                                                </LinearGradientBrush>
                                            </Path.Fill>
                                        </Path>
                                    </Grid>
                                </Grid>
                            </StackPanel>
